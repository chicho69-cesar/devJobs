<main class="container">
  <form action="/vacancies/edit/{{vacancy.url}}" method="POST" class="default-form">
    <h3>Información General</h3>

    <div class="field">
      <label>Titulo</label>
      <input type="text" value="{{vacancy.title}}" name="title" placeholder="Ej: React Developer" required>
    </div>

    <div class="field">
      <label>Empresa</label>
      <input type="text" value="{{vacancy.company}}" name="company" placeholder="Empresa Contrata" required>
    </div>

    <div class="field">
      <label>Ubicación</label>
      <input type="text" value="{{vacancy.location}}" name="location" placeholder="Ej: México o Remoto" required>
    </div>

    <div class="field">
      <label>Salario (USD)</label>
      <input type="text" value="{{vacancy.salary}}" name="salary" placeholder="Ej: $500 USD" required>
    </div>

    <div class="field">
      <label>Contrato</label>

      <select name="contract">
        {{#typeOfContract vacancy.contract}}
          <option value="" disabled selected>-- Selecciona --</option>
          <option value="Freelance">Freelance</option>
          <option value="Tiempo Completo">Tiempo Completo</option>
          <option value="Medio Tiempo">Medio Tiempo</option>
          <option value="Por Proyecto">Por Proyecto</option>
        {{/typeOfContract}}
      </select>
    </div>

    <h3>Descripción del Puesto</h3>

    <div class="field description">
      <label>Descripción</label>
      <input type="hidden" id="x" value="{{{vacancy.description}}}" name="description">
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Conocimientos</h3>

    <ul class="knowledge-list">
      {{#selectSkills vacancy.skills}}
      {{/selectSkills}}
    </ul>

    <div class="field horizontal-center">
      <input type="hidden" name="skills" id="skills">
      <input type="submit" value="Guardar Cambios" class="btn btn-blue">
    </div>
  </form>
</main>
