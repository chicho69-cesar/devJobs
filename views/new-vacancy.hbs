<main class="container">
  <form action="/vacancies/new" method="POST" class="default-form">
    <h3>Información General</h3>

    <div class="field">
      <label>Titulo</label>
      <input type="text" name="title" placeholder="Ej: React Developer">
    </div>

    <div class="field">
      <label>Empresa</label>
      <input type="text" name="company" placeholder="Empresa Contrata">
    </div>

    <div class="field">
      <label>Ubicación</label>
      <input type="text" name="location" placeholder="Ej: México o Remoto">
    </div>

    <div class="field">
      <label>Salario (USD)</label>
      <input type="text" name="salary" placeholder="Ej: $500 USD">
    </div>

    <div class="field">
      <label>Contrato</label>

      <select name="contract">
        <option value="" disabled selected>-- Selecciona --</option>
        <option value="Freelance">Freelance</option>
        <option value="Tiempo Completo">Tiempo Completo</option>
        <option value="Medio Tiempo">Medio Tiempo</option>
        <option value="Por Proyecto">Por Proyecto</option>
      </select>
    </div>

    <h3>Descripción del Puesto</h3>

    <div class="field description">
      <label>Descripción</label>
      <input type="hidden" id="x" name="description">
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Conocimientos</h3>

    <ul class="knowledge-list">
      {{#selectSkills a}}
      {{/selectSkills}}
    </ul>

    <div class="field horizontal-center">
      <input type="hidden" name="skills" id="skills">
      <input type="submit" value="Publicar" class="btn btn-blue">
    </div>
  </form>
</main>
